<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0"><i class="fas fa-user-plus" aria-hidden="true"></i> 新規登録</h5>
      <div class="form-body p-4">
        <!--バリデーション部-->
        <%= render "templates/validation", obj: resource %>

        <%= form_with model: @user, url: user_registration_path do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ユーザー名" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Eメールアドレス" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <%= f.password_field :password, class: "form-control", placeholder: "パスワード(#{@minimum_password_length}文字以上)" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード(確認用)" %>
          </div>

          <%= f.submit "新規登録", class:"btn btn-success w-75 mt-2" %>
        <% end %>

        <div class="mt-5">
          <p class="text-secondary mb-2"><span>--------</span> アカウントを既に持っている場合 <span>--------</span></p>
          <%= link_to "ログイン", new_user_session_path, class:"btn btn-secondary" %>
        </div>

      </div>
    </div>
  </div>
</div>