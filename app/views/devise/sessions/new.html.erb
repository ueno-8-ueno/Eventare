<div class="box">
  <div class="box-inner">

    <%= form_with model: @user, url: user_session_path do |f| %>
      <h1>ログイン</h1>
      <div class="box-name">
        <%= f.label :name, "ユーザーネーム" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %><br />
          </div>
          <div class="column-right">
            <%= link_to "パスワードを忘れた場合", new_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="box-login">
        <%= f.submit "ログイン" %>

        <% if devise_mapping.rememberable? %>
          <div class="remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログインしたままにする" %>
          </div>
        <% end %>

      </div>
    <% end %>

    <div class="box-newusr">
      <p><span>------------</span> 新しいお客様ですか？ <span>------------</span></p>
      <%= link_to "アカウントを作成", new_user_registration_path %>
    </div>

  </div>
</div>