<%= form_with model: event do |f| %>
  <div class="mb-3">
    <h5><i class="far fa-flag"></i> イベント名</h5>
    <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"イベント名" %>
  </div>

  <div class="mb-3">
    <h5><i class="fa-solid fa-pen-fancy"></i> イベント詳細</h5>
    <%= f.text_area :introduction, autofocus: true %>
  </div>

  <div class="mb-3">
    <h5><i class="fa-solid fa-tag"></i> イベントのジャンル</h5>
    <%= f.select :genre, {'音楽':'音楽', '小説':'小説', '漫画':'漫画', 'イラスト':'イラスト', 'ものつくり':'ものつくり', 'その他':'その他'}, { include_blank: '選択してください'} %>
  </div>

  <div class="mb-3">
    <h5><i class="fa-regular fa-clock"></i> イベント開始日時</h5>
    <%= f.date_field :start_at %>
  </div>

  <div class="mb-3">
    <h5><i class="fa-solid fa-clock"></i> イベント終了日時</h5>
    <%= f.date_field :end_at %>
  </div>

  <%= f.submit "送信", class:"btn btn-lg btn-block btn-info mt-4" %>
<% end %>