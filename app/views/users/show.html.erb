<!-- ユーザーの詳細 -->
<div class="bg-light mb-3">
  <div class="container mb-3">
    <div class="row">
      <div class="col-2 pt-2 pb-4">
        <%= image_tag @user.get_profile_image(150,150), class:"mt-3 rounded-circle"; %>
      </div>
      <div class="col-10">
        <p class="text-secondary mt-2"><i class="fa-solid fa-list-check"></i> <%= @user.events.count %>件のTODO</p>
        <strong><p class="mt-2 h3"><%= @user.name %></p></strong>
        <p class="pt-3"><%= @user.introduction %></p>
        <% if @user == current_user %>
          <%= link_to "プロフィールを編集", edit_user_path(@user), class:"btn btn-outline-secondary btn-block w-50" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!--投稿一覧-->
<%= render 'templates/index', events: @events %>